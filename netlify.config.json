{
  "build": {
    "environment": {
      "NEXT_USE_NETLIFY_EDGE": "true",
      "NEXT_FORCE_EDGE_IMAGES": "true"
    }
  },
  "headers": [
    {
      "for": "/*",
      "values": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "for": "/_next/static/*",
      "values": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "for": "/static/*",
      "values": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ]
} 